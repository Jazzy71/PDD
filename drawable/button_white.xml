<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Light gray when pressed -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#C0C0C0"/> <!-- Border -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Normal white color -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#D0D0D0"/> <!-- Border -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>
