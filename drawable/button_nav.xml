<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D1D1D1"/> <!-- Light gray when pressed -->
            <corners android:radius="50dp"/> <!-- Fully rounded -->
            <stroke android:width="2dp" android:color="#A0A0A0"/> <!-- Border -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F8F8F8"/> <!-- Light white-gray normal state -->
            <corners android:radius="50dp"/> <!-- Fully rounded -->
            <stroke android:width="2dp" android:color="#C0C0C0"/> <!-- Border -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
</selector>
