<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_black"
            android:contentDescription="Back button" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:contentDescription="Profile picture" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search Cars..."
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:gravity="center_vertical" />


        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:contentDescription="Search icon" />
    </LinearLayout>

    <!-- Brand Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txt_brand_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select car brand"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_switch_to_sell"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Switch to Sell"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000" />
    </LinearLayout>

    <!-- Car Brands Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/brand_hyundai"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_hyundai"
                android:contentDescription="Hyundai logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HYUNDAI"
                android:textColor="#003399"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brand_tata"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_tata"
                android:contentDescription="Tata logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TATA"
                android:textColor="#0066CC"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brand_honda"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_honda"
                android:contentDescription="Honda logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HONDA"
                android:textColor="#CC0000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Car Brands Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/brand_suzuki"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_suzuki"
                android:contentDescription="Suzuki logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUZUKI"
                android:textColor="#0000FF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brand_renault"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_renault"
                android:contentDescription="Renault logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RENAULT"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brand_toyota"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/only_toyota"
                android:contentDescription="Toyota logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOYOTA"
                android:textColor="#CC0000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Similar Cars Section -->
    <TextView
        android:id="@+id/txt_similar_cars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="Similar car you might like"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Car Cards Container in HorizontalScrollView -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none">

        <!-- Inner LinearLayout to hold car cards horizontally -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Car Card 1 -->
            <LinearLayout
                android:id="@+id/car_card_1"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_edittext">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_car_1"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_wagon"
                        android:contentDescription="Maruti Wagon" />

                    <ImageButton
                        android:id="@+id/btn_favorite_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:src="@drawable/icon_heart"
                        android:contentDescription="Add to favorites" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_car_name_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2015 Maruti wagon"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_car_details_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="43,721 km · petrol · manual"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginVertical="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_price_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹3.11 Lakh"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_original_price_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="₹3.26 Lakh"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <!-- Car Card 2 -->
            <LinearLayout
                android:id="@+id/car_card_2"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_edittext">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_car_2"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_wagon"
                        android:contentDescription="Maruti Wagon" />

                    <ImageButton
                        android:id="@+id/btn_favorite_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_margin="8dp"
                        android:background="@null"
                        android:src="@drawable/icon_heart"
                        android:contentDescription="Add to favorites" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txt_car_name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2015 Maruti wagon"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_car_details_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="43,721 km · petrol · manual"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginVertical="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_price_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹3.11 Lakh"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_original_price_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="₹3.26 Lakh"
                            android:textColor="#666666"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <!-- You can add more cards here similarly -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/nav_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_bag"
                android:contentDescription="Buy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_favorite"
                android:contentDescription="Favorite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_help"
                android:contentDescription="Help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_home"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp" />
        </LinearLayout>


        </LinearLayout>
</LinearLayout>
