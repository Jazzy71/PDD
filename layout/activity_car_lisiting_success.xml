<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A9A9A9"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/ivChecklistIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_checklist"
                    android:contentDescription="Checklist icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvListedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listed"
                android:textSize="36sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSuccessfullyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successfully"
                android:textSize="36sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="60dp" />

            <ImageView
                android:id="@+id/ivCarManualIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_car_manual"
                android:contentDescription="Car manual icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E6E6E6"
        android:padding="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCarTakenSoonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your car wil be\ntaken soon"
            android:textSize="36sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp" />
    </LinearLayout>
</LinearLayout>