<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="16dp">

    <!-- Top navigation bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/editProfileButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_profile" />
    </LinearLayout>

    <!-- Profile image and type -->
    <LinearLayout
        android:id="@+id/profileImageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_placeholder" />

            <ImageView
                android:id="@+id/editImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circle_background" />
        </FrameLayout>

        <TextView
            android:id="@+id/userTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer/ Seller"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Username field -->
    <LinearLayout
        android:id="@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:text="Jazz"
            android:textColor="#000000"
            android:textSize="16sp"
            android:enabled="false" />
    </LinearLayout>

    <!-- Email field -->
    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:text="jaz.c78@gmail.com"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:enabled="false" />
    </LinearLayout>

    <!-- Mobile number field -->
    <LinearLayout
        android:id="@+id/mobileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/mobileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/mobileInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:text="94589xxxxx"
            android:textColor="#000000"
            android:inputType="phone"
            android:enabled="false" />
    </LinearLayout>

    <!-- Location field -->
    <LinearLayout
        android:id="@+id/locationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:text="Chennai"
            android:textColor="#000000"
            android:enabled="false" />
    </LinearLayout>

    <!-- Save button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_button_bg"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone" />

    <!-- Delete account button -->
    <LinearLayout
        android:id="@+id/deleteAccountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/deleteAccountIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete_account" />

        <TextView
            android:id="@+id/deleteAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete account"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>