<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <!-- Back button -->
    <LinearLayout
        android:id="@+id/container_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_black" />
    </LinearLayout>

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_image"
            android:scaleType="centerCrop" />

        <!-- Profile Info -->
        <LinearLayout
            android:id="@+id/container_profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAZZ"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_seller_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contact Information -->
    <LinearLayout
        android:id="@+id/container_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <!-- Phone Number -->
        <LinearLayout
            android:id="@+id/container_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 89107XXXXX"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:id="@+id/container_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_email"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jaz.c78@gmail.com"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Menu Options -->
    <LinearLayout
        android:id="@+id/container_menu_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <!-- My Listings -->
        <LinearLayout
            android:id="@+id/btn_my_listings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_listings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_listings" />

            <TextView
                android:id="@+id/txt_my_listings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Listings"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Payments -->
        <LinearLayout
            android:id="@+id/btn_payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_payments"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_payments" />

            <TextView
                android:id="@+id/txt_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payments"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Reviews and Ratings -->
        <LinearLayout
            android:id="@+id/btn_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_reviews"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_reviews" />

            <TextView
                android:id="@+id/txt_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews and Ratings"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings" />

            <TextView
                android:id="@+id/txt_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>