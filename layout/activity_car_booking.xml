<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Back button with title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:background="@null"
                android:src="@drawable/ic_back_black"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/txt_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maruti wagon"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <!-- Share and Fav buttons -->
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@null"
            android:src="@drawable/ic_share"
            android:layout_marginRight="16dp"
            android:contentDescription="Share"/>

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/icon_heart"
            android:contentDescription="Favorite"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Car Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_car_main"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car_wagon"
                    android:contentDescription="Car Image"/>

                <!-- Photo counter -->
                <TextView
                    android:id="@+id/txt_photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 / 3"
                    android:textColor="#000000"
                    android:background="#CCFFFFFF"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="16dp"/>
            </FrameLayout>

            <!-- Photos label -->
            <TextView
                android:id="@+id/txt_photos_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>

            <!-- Thumbnail Images -->
            <LinearLayout
                android:id="@+id/thumbnail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_thumbnail_1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car_wagon"
                    android:layout_marginRight="8dp"
                    android:contentDescription="Thumbnail 1"/>

                <ImageView
                    android:id="@+id/img_thumbnail_2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car_wagon"
                    android:layout_marginRight="8dp"
                    android:contentDescription="Thumbnail 2"/>

                <ImageView
                    android:id="@+id/img_thumbnail_3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car_wagon"
                    android:contentDescription="Thumbnail 3"/>
            </LinearLayout>

            <!-- Car Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Title and specs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_car_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015 Maruti wagon"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_car_specs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="43,721 km -petrol"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt_car_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹3.11 Lakh"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_price_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fixed on road price"
                        android:textColor="#666666"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Test Drive Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_home"
                        android:contentDescription="Home"/>

                    <TextView
                        android:id="@+id/txt_test_drive_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home - test drive - Available"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_heart_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/icon_heart"
                    android:contentDescription="Add to Favorites"/>
            </LinearLayout>

            <!-- Assured and Test Drive Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_assured"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:backgroundTint="#ABA9A6"
                    android:text="Assured"
                    android:textColor="#FFFFFF"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/btn_test_drive"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:layout_weight="2"
                    android:backgroundTint="#A2A2A2"
                    android:text="Free test drive"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Book Now Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#F0F0F0">

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="Book now"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="16dp"/>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/nav_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_bag"
                android:contentDescription="Buy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_favorite"
                android:contentDescription="Favorite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help"
                android:contentDescription="Help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_home"
                android:contentDescription="Home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>