<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_black"
            android:background="@null"
            android:contentDescription="Back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="30dp"
            android:layout_height="43dp"
            android:src="@drawable/ic_menu"
            android:background="@null"
            android:contentDescription="Menu" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_car_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Car Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/ll_car_logo_container"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_text_background"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_car_logo"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/only_hyundai"
            android:contentDescription="Hyundai Logo" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HYUNDAI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#003C8F"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Location of your car"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/et_search_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search City...."
        android:padding="16dp"
        android:background="@drawable/rounded_edittext"
        android:drawableEnd="@drawable/icon_search"
        android:layout_marginBottom="24dp"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_agra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button"
            android:paddingStart="24dp"
            android:text="Agra"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_allahabad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allahabad"
            android:textAlignment="textStart"
            android:paddingStart="24dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_bhopal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bhopal"
            android:textAlignment="textStart"
            android:paddingStart="24dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_chandigarh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chandigarh"
            android:textAlignment="textStart"
            android:paddingStart="24dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_mumbai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mumbai"
            android:textAlignment="textStart"
            android:paddingStart="24dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_chennai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chennai"
            android:textAlignment="textStart"
            android:paddingStart="24dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>